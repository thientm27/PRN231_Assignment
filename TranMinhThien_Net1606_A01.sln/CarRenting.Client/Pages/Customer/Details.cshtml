@page
@model CarRenting.Client.Pages.Customer.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Renting Details</h1>
<div>
    <h4>RentingTransaction</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.RentingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.RentingStatus)
        </dd>
    </dl>
</div>

<h4>Details</h4>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentingDetail[0].StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingDetail[0].EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingDetail[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingDetail[0].CarName)
        </th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.RentingDetail)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.CarName)
            </td>
       
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>